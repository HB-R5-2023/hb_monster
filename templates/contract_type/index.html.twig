{% extends 'base.html.twig' %}

{% block title %}Hello ContractTypeController!
{% endblock %}

{% block body %}
	<h1>Nos contrats</h1>

	{% for type in types %}
		<div>
			<h2>
				<a href="{{ path('contract_type_item', { "name": type.name }) }}">
					{{ type.name }}
					({{ type.offers|length }}
					offres)
				</a>
			</h2>
		</div>
	{% endfor %}
{% endblock %}
